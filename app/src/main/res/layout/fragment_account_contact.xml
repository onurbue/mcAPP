    <EditText
        android:id="@+id/editTextEmailContact2"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rectangle_text"
        android:elevation="2dp"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSobrenomeContact" />

    <ImageView
        android:id="@+id/back_icone_contact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/informacoes_contacto"
        app:layout_constraintTop_toTopOf="@+id/informacoes_contacto"
        app:srcCompat="@drawable/seta_back"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/informacoes_contacto2"
        android:layout_width="wrap_content"
